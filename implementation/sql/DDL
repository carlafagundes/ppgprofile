CREATE DATABASE ppg_bd;

CREATE TABLE aluno (
  id int NOT NULL AUTO_INCREMENT,
  nome varchar(255) NOT NULL,
  sobrenome varchar(255) NOT NULL,
  sexo char(1) NOT NULL,  
  cpf char(11) NOT NULL,
  dataNacimento date NOT NULL,
  nacionalidade varchar(255) NOT NULL,
  logradouro varchar(30) NOT NULL,
  numero int(10) NOT NULL,
  bairro varchar(30) NOT NULL,
  cidade varchar(30) NOT NULL,
  estado char(2) NOT NULL,
  cep char(8) NOT NULL,
  curso varchar(255) NOT NULL,
  cr int(10) NOT NULL,
  anoConclusao int(4) NOT NULL,
  areaConhecimento varchar(100) NOT NULL,
  semestreIngresso varchar(100) NOT NULL,
  dedicacao char(1),
  orientador varchar (255) NOT NULL,
  coOrientador varchar (255) NOT NULL,  
  nivel char(1) NOT NULL,
  created datetime NOT NULL,
  modified datetime NOT NULL,
  PRIMARY KEY (id)

);

CREATE TABLE professor (
  id int NOT NULL AUTO_INCREMENT,
  nome varchar(255) NOT NULL,
  sobrenome varchar(255) NOT NULL,
  siape char(7) NOT NULL,
  email varchar(30) NOT NULL,
  senha varchar(30) NOT NULL,  
  created datetime NOT NULL,
  modified datetime NOT NULL,
  PRIMARY KEY (id)
);

CREATE TABLE instituicao (
  id int NOT NULL AUTO_INCREMENT,
  nome varchar(255) NOT NULL,
  tipo char(1) NOT NULL,  
  created datetime NOT NULL,
  modified datetime NOT NULL,
  PRIMARY KEY (id)
);

CREATE TABLE curso (
  id int NOT NULL AUTO_INCREMENT,
  nome varchar(255) NOT NULL,
  instituicao varchar(255) NOT NULL,
  conceito_mec int(10) NOT NULL,
  created datetime NOT NULL,
  modified datetime NOT NULL,
  PRIMARY KEY (id)
);
